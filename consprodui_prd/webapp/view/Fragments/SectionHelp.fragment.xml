<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
	<TableSelectDialog
		noDataText="No Sections Found"
		searchPlaceholder="Search Sections by ID, Name, and Description"
		title="Select a SECTION"
		liveChange=".on_liveSearch"
		search=".on_liveSearch"
		confirm=".on_SectionOK"
		cancel=".on_SectionOK"
		items="{searchHelp>/Sections}">
		<ColumnListItem vAlign="Middle">
			<cells>
				<Text text="{searchHelp>ID}" />
				<Text text="{searchHelp>Name}" />
				<Text text="{searchHelp>Description}" />
				<Text text="{searchHelp>ProjectManager}" />
				<!-- <Text text="{searchHelp>CompanyID}" />
				<Text text="{searchHelp>CompanyDescription}" /> -->
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Section ID" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Name" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Description" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Project Manager" />
				</header>
			</Column>
			<!-- <Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Company ID" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Company Description" />
				</header>
			</Column> -->
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>
